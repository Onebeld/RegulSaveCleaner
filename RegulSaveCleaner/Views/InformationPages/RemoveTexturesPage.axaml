<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="RegulSaveCleaner.Views.InformationPages.RemoveTexturesPage">
    <SmoothScrollViewer>
        <Grid RowDefinitions="Auto,*" Margin="15">
            <TextBlock Grid.Row="0"
                       Text="{StaticResource RemoveTextures}"
                       Theme="{StaticResource SubtitleTextBlockTheme}"
                       Margin="5 0 0 10"
                       VerticalAlignment="Center"/>
        
            <StackPanel Grid.Row="1" Spacing="10">
                <TextBlock TextWrapping="Wrap" Text="{StaticResource RemoveTexturesDescription1}" />
                <Image Source="avares://RegulSaveCleaner.Assets/Images/Texture.png"
                       MaxWidth="200"/>
                <TextBlock TextWrapping="Wrap" Text="{StaticResource RemoveTexturesDescription2}" />
                <Image Source="avares://RegulSaveCleaner.Assets/Images/BeforeAfter.jpg" />
                <TextBlock TextWrapping="Wrap" Foreground="{StaticResource SystemFillColorCautionBrush}" Text="{StaticResource RemoveTexturesDescription3}" />
            </StackPanel>
        </Grid>
    </SmoothScrollViewer>
</UserControl>
