<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="RegulSaveCleaner.Views.InformationPages.ClearCache.FeaturedItemsPages">
    <SmoothScrollViewer>
        <Grid RowDefinitions="Auto,*" Margin="15">
            <TextBlock Grid.Row="0"
                       Text="FeaturedItems"
                       Theme="{StaticResource SubtitleTextBlockTheme}"
                       Margin="5 0 0 10"
                       TextWrapping="Wrap"
                       VerticalAlignment="Center"/>
            
            <TextBlock Grid.Row="1" Text="{StaticResource FeaturedItemsDescription}" TextWrapping="Wrap" />
        </Grid>
    </SmoothScrollViewer>
</UserControl>
