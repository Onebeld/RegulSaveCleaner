<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="RegulSaveCleaner.Views.InformationPages.RemoveOtherTypesPage">
    <SmoothScrollViewer>
        <Grid RowDefinitions="Auto,*" Margin="15">
            <TextBlock Grid.Row="0"
                       Text="{StaticResource RemoveOtherTypes}"
                       Theme="{StaticResource SubtitleTextBlockTheme}"
                       Margin="5 0 0 10"
                       VerticalAlignment="Center"/>
            
            <StackPanel Grid.Row="1" Spacing="10">
                <TextBlock Text="{StaticResource RemoveOtherTypesDescription1}" TextWrapping="Wrap" />
                <TextBlock Foreground="{StaticResource SystemFillColorCautionBrush}" Text="{StaticResource RemoveOtherTypesDescription2}" TextWrapping="Wrap" />
            </StackPanel>
        </Grid>
    </SmoothScrollViewer>
</UserControl>
