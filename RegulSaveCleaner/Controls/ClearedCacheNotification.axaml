<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="RegulSaveCleaner.Controls.ClearedCacheNotification">
    <StackPanel Spacing="5" Margin="10">
        <TextBlock Text="{StaticResource Successful}" FontWeight="Medium" />
        <TextBlock MaxHeight="80"
                   Text="{StaticResource CacheCleared}"
                   TextWrapping="Wrap"
                   Margin="0 0 12 0" />
        
        <Button x:Name="Button" Content="{StaticResource ReadMore}" Padding="-5" />
    </StackPanel>
</UserControl>
